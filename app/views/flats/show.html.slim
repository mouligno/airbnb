.container
  .row
    .col-md-12
      h1 = @flat.title

  .row
    .col-md-8
      - if @flat.flat_pictures.any?
        .row
          - @flat.flat_pictures.each do |picture|
            .col-md-4
              = image_tag(picture.small.url, class: 'img-responsive')

      h2 Flat informations
      p
        'Kind of flat :
        => @flat.kind
      p
        'Number of people :
        = @flat.people_number
      p
        'Number of rooms :
        => @flat.rooms_number
      p
        'Number of beds :
        = @flat.bed_number
      p
        'Number of bathrooms :
        = @flat.bathroom_number

      h2 Flat options
      p
        'Smoking allowed :
        = @flat.smoker
      p
        'Television :
        = @flat.television
      p
        'Internet :
        = @flat.internet

    .col-md-4
      h3 Price per night
      h3 = number_to_currency(@flat.price)
      = link_to 'Book request', new_flat_booking_request_path(@flat), class: 'btn btn-primary btn-lg'

      h3 Flat location
      p = @flat.city
      p = @flat.country

      hr

      h3 Your host
      .text-center
        = image_tag(@flat.owner.profile.profile_picture.avatar.url, class: 'avatar avatar-super-large')
      label
        => @flat.owner.profile.first_name
        => @flat.owner.profile.last_name
      p = @flat.owner.profile.description
